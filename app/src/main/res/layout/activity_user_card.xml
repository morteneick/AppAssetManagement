<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recycleViewUserList.UserCardActivity">

    <include
        android:id="@+id/toolbardevicecard"
        layout="@layout/toolbar_devicecard"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="564dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/layoutWorkerId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textWorkerId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/textWokerId"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/editWorkerId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:textColor="#000000"
                        android:textColorHint="@color/colorPrimaryDark" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutFirstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textFirstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/textFirstname"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/editFirstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:textColor="#000000"
                        android:textColorHint="@color/colorPrimaryDark" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutSurname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textSurname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/textSurname"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/editSurname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:textColor="#000000"
                        android:textColorHint="@color/colorPrimaryDark" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/textEmail"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/editEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:textColor="#000000"
                        android:textColorHint="@color/colorPrimaryDark" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutRole"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textRole"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/textRole"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/editRole"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:textColor="#000000"
                        android:textColorHint="@color/colorPrimaryDark" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutBooking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <CheckBox
                        android:id="@+id/checkBoxAddDevice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/textRoleAddDevice" />
                    <CheckBox
                        android:id="@+id/checkBoxEditDevice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/textRightEditDevice" />

                    <CheckBox
                        android:id="@+id/checkBoxViewDevice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/textRightViewDevice" />

                    <CheckBox
                        android:id="@+id/checkBoxDeleteDevice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/textRightDeleteDevice" />

                    <CheckBox
                        android:id="@+id/checkBoxAddUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/textRightAddUser" />

                    <CheckBox
                        android:id="@+id/checkBoxDeleteUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/textRightDeleteUser" />

                    <CheckBox
                        android:id="@+id/checkBoxEditUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/textRightEditUser" />

                    <CheckBox
                        android:id="@+id/checkBoxReserveDevice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/textRightReserveDevice" />

                    <CheckBox
                        android:id="@+id/checkBoxEditReservation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/textRightEditReservation" />

                    <CheckBox
                        android:id="@+id/checkBoxDeleteReservation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/textRightDeleteReservation" />

                </LinearLayout>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="60dp"
        android:text="@string/btnSaveText"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>